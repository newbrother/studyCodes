//http://codeforces.com/contest/1105/problem/B
//n길이의 문자열에서 k길이로 반복되는 알파벳개수중 최대값을 구하는 문제.
//미리 배열에 k문자열을 저장한다음에 strstr로 비교해서 찾으려고했는데 실패해서 틀렸다.
//그래서 다른사람 코드 참고해서 다시풀었음. 틀린코드 아래에 첨부.

#include <stdio.h>
int main()
{
    int n, k;
    scanf("%d %d", &n, &k);
    char str[200001];
    int arr[26] = { 0 };
    scanf("%s", str);
    int max = 0;
    int i, j, x;
    for (i = 0; i < n; i++) {
        x = 1;
        if (str[i] == str[i + 1]) {
            while (str[i] == str[i + 1] && i + 1 < n) {
                x++;
                i++;
            }
        }
        int idx = str[i] - 'a'; //알파벳 인덱스 a면 idx:0
        arr[idx] += x / k;
        if (max < arr[idx])
            max = arr[idx];
    }
    printf("%d", max);
    return 0;
}

------------------------------
#include <stdio.h>
#include <string.h>
char comp[26][200001];
int main()
{
    int n, k;
    scanf("%d %d", &n, &k);
    char str[200001];
   
    scanf("%s", str);
    int x = 0;//level of the string
   
    int i = 0,j=0;
    for (char ch = 'a'; ch <= 'z'; ch++) {
        for (j = 0; j < k; j++) {
            comp[i][j] = ch;
        }
        i++;
    }
    int max = 0;
    for (i = 0; i < 26;i++) {
        int cnt = 0;
        char *ptr = strstr(str, comp[i]);
        while (ptr != NULL) {
            cnt++;
            ptr = strstr(ptr + k, comp[i]);
        }
        if (max < cnt)
            max = cnt;
    }
    printf("%d", max);
    return 0;
}
