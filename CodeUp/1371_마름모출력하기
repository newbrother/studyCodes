//http://codeup.kr/JudgeOnline/problem.php?id=1371
//1371 : 마름모 출력하기

#include<stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        for(int j=n-i-1;j>0;j--){
            printf(" ");
        }
        printf("*");
        
        for(int j=0;j<i;j++){
            printf("  ");
        }
        printf("*\n");
    }
    
    for(int i=0;i<n;i++){
        for(int j=0;j<i;j++){
            printf(" ");
        }
        printf("*");
        
        for(int j=n-i-1;j>0;j--){
            printf("  ");
        }
        printf("*\n");
        
        
    }
    return 0;
}
