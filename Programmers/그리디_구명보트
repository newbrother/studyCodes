#include <string>
#include <algorithm>
#include <vector>

using namespace std;

int w[50001];

int solution(vector<int> people, int limit) {
    int answer = 0;
    int i,j;
    int size = people.size();
    int arrSize = 0;
    for(i=0;i<size;i++){
        if(people[i]>limit-40){
            answer++;
        }else{
            w[arrSize] = people[i];
            arrSize++;
        }
    }
    sort(w,w+arrSize);
    //for(i=0;i<arrSize;i++)
    //    printf("w[%d]=%d ",i,w[i]);
    i=0, j=arrSize-1;
    while(i<=j){
        if(w[j]+w[i]<=limit){
            i++;
        }
        j--;
        answer++;
    }
    //printf("end i=%d j=%d\n",i,j);
    return answer;
}
